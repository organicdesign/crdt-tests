{
	"compilerOptions": {
		"noImplicitAny": false,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"module": "ES2022",
		"outDir": "./dist",
		"target": "ES6",
		"baseUrl": "."
	},

	"ts-node": {
		"swc": true,
		"esm": true
	},

	"include": [
		"./src/**/*.ts"
	],

	"exclude": [
		"node_modules"
	]
}
